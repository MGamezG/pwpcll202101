<div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-12">
        <div class="card">
            <div class="card-image">
                <img src="/images/img1.jpg" alt="fondo 1">
                <span class="card-title">
                    agregar proyecto
                </span>
            </div>
            <form autocomplete="off" action="/proyects/add" method="post">
            <div class="card-content">
                {{!-- entrada de nombre de proyecto --}}
                <div class="input-field">
                    <label for="project-name">
                        nombre del proyecto
                    </label>
                    <input
                    id="project-name"
                    placeholder="ingrese el nombre aqui"
                    name="name"
                    type="text"
                    class="validate">
                </div>
                {{!-- entrada de la descripcion de la idea del proyecto --}}
                <div class="input-field">
                    <label for="project-description">
                        Descripcion del proyecto
                    </label>
                    <textarea name="description" id="project-description" class="materialize-textarea"></textarea>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="blue darken-3 waves-effect waves-light btn">
                    <i class="material-icons left">note-add</i>agregar
                </button>
            </div>
            </form>
        </div>
    </div>
</div>